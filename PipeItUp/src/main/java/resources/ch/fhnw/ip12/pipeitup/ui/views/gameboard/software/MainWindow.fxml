<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="ch.fhnw.ip12.pipeitup.ui.views.gameboard.software.controllers.MainController">
	<BorderPane styleClass="root">
		<top>
			<Label fx:id="header" text="Software Gameboard" />
		</top>
		<center>
			<Canvas fx:id="gameBoardCanvas" height="1000" width="500" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" />
		</center>
		<bottom>
			<VBox>
				<HBox>
					<Label text="GameMode:    " />
					<Label fx:id="gameMode" />
				</HBox>
				<HBox>
					<Label text="GameState:    " />
					<Label fx:id="gameState" />
				</HBox>
			</VBox>
		</bottom>
	</BorderPane>
</VBox>
